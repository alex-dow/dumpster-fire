{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES6","es2015","es2016","es2017","es2018"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}